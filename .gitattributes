* text=auto

# Line endings
*.sh text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.json text eol=lf
*.tf text eol=lf
*.tfvars text eol=lf
*.py text eol=lf

*.bat text eol=crlf
*.ps1 text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.zip binary

* text=auto

# Default: keep LF everywhere (good for Linux/Docker/CI)
*           text=auto eol=lf

# Windows-only scripts keep CRLF
*.bat       text eol=crlf
*.cmd       text eol=crlf
*.ps1       text eol=crlf

# Must be LF (avoid CI/Unix issues)
*.sh        text eol=lf
*.yml       text eol=lf
*.yaml      text eol=lf
*.tf        text eol=lf
*.tfvars    text eol=lf
*.json      text eol=lf
*.js        text eol=lf
*.ts        text eol=lf
*.tsx       text eol=lf
*.Dockerfile text eol=lf
Dockerfile  text eol=lf

# Binaries (never touch)
*.png       binary
*.jpg       binary
*.gif       binary
*.zip       binary
*.exe       binary
